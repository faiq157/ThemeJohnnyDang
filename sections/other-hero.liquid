{{ 'component-other-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .other-hero-{{ section.id }} {
    background: linear-gradient(106.46deg, 
      {{ section.settings.gradient_color_1 | default: '#1a1a2e' }} -7.59%, 
      {{ section.settings.gradient_color_2 | default: 'rgba(162, 210, 255, 0.56)' }} -7.59%, 
      {{ section.settings.gradient_color_3 | default: 'rgba(0, 50, 100, 0.99)' }} 87.22%),
      linear-gradient(108.2deg, 
      {{ section.settings.gradient_overlay_1 | default: 'rgba(0, 0, 0, 0)' }} -29.77%, 
      {{ section.settings.gradient_overlay_2 | default: 'rgba(0, 50, 100, 0.41)' }} 170.9%);
  }

  .other-hero-{{ section.id }} .other-hero__subtitle {
    color: {{ section.settings.subtitle_color | default: '#a2d2ff' }};
  }

  .other-hero-{{ section.id }} .other-hero__title {
    color: {{ section.settings.title_color | default: '#ffffff' }};
  }

  .other-hero-{{ section.id }} .other-hero__description {
    color: {{ section.settings.description_color | default: '#e0f0ff' }};
  }

  .other-hero-{{ section.id }} .other-hero__cta {
    color: {{ section.settings.cta_text_color | default: '#a2d2ff' }};
    border-color: {{ section.settings.cta_border_color | default: '#a2d2ff' }};
  }

  .other-hero-{{ section.id }} .other-hero__cta:hover {
    background: {{ section.settings.cta_hover_bg_color | default: '#a2d2ff' }};
    color: {{ section.settings.cta_hover_text_color | default: '#1a1a2e' }};
    box-shadow: 0 4px 12px {{ section.settings.cta_hover_shadow_color | default: 'rgba(162, 210, 255, 0.3)' }};
  }
{%- endstyle -%}

<!-- Other Hero Section -->
<section class="other-hero other-hero-{{ section.id }} section-{{ section.id }}-padding">
  <div class="other-hero__container page-width">
    <div class="other-hero__content">
      {% if section.settings.subtitle != blank %}
        <p class="other-hero__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      
      {% if section.settings.title != blank %}
        <h1 class="other-hero__title">{{ section.settings.title }}</h1>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="other-hero__description">{{ section.settings.description }}</div>
      {% endif %}
      
      {% if section.settings.show_cta and section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="other-hero__cta">
          {{ section.settings.cta_text }}
          <svg class="other-hero__arrow" width="12" height="12" viewBox="0 0 12 12" fill="none">
            <path d="M1 11L11 1M11 1H1M11 1V11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}
    </div>
    
    {% if section.settings.show_image and section.settings.hero_image != blank %}
      <div class="other-hero__image">
        {%- liquid
          assign image_height = section.settings.hero_image_height
          assign image_width = section.settings.hero_image_width
          assign image_alt = section.settings.hero_image.alt | default: section.settings.title
        -%}
        <img
          src="{{ section.settings.hero_image | image_url: width: image_width }}"
          alt="{{ image_alt }}"
          width="{{ image_width }}"
          height="{{ image_height }}"
          loading="eager"
          class="other-hero__img"
        >
      </div>
    {% endif %}
  </div>
</section>

