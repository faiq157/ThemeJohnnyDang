                  </svg>
                </a>
              {% endif %}
              {% if section.settings.youtube_url != blank %}
                <a href="{{ section.settings.youtube_url }}" class="footer__social-link" target="_blank" rel="noopener">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>

        <!-- Dynamic Footer Columns -->
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'link_list' %}
              <div class="footer__column footer__column--links" {{ block.shopify_attributes }}>
                <h3 class="footer__column-heading">{{ block.settings.heading | default: 'Quick Links' }}</h3>
                {% if block.settings.menu != blank %}
                  <ul class="footer__links-list">
                    {% for link in linklists[block.settings.menu].links %}
                      <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            {% when 'text' %}
              <div class="footer__column footer__column--care" {{ block.shopify_attributes }}>
                <h3 class="footer__column-heading">{{ block.settings.heading | default: 'Customer Care' }}</h3>
                <div class="footer__care-info">
                  {{ block.settings.subtext }}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>

